<% if comment.like_user(current_user.id) %>
  <%= button_to article_comment_comment_like_path(article, comment, comment_id: comment.id), method: :delete, id: "like-button", remote: true do %>
    <%= image_tag("dislike.jpeg") %>
    <span>
      <h5><%= comment.likes_count %>いいねされています</h5>
    </span>
  <% end %>
<% else %>
  <%= article_comment_comment_likes_path(article, comment, comment_id: comment.id), id: "like-button", remote: true do %>
    <%= image_tag("like.jpeg") %>
    <span>
      <% link_to comment.likes_count + "いいねされています",  %>
    </span>
  <% end %>
<% end %>
