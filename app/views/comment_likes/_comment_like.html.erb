<% if comment.is_liked_by_this_user?(current_user.id) %>
  <%= button_to article_comment_comment_like_path(article_id: article.id, comment_id: comment.id), method: :delete, id: "comment_like-button", remote: true do %>
    <%= image_tag("dislike.jpeg") %>
    <span>
      <%= comment.likes_count %>いいねされています
    </span>
  <% end %>
<% else %>
  <%= button_to article_comment_comment_likes_path(article, comment), id: "comment_like-button", remote: true do %>
    <%= image_tag("like.jpeg") %>
    <span>
      <% comment.likes_count %>いいねされています
    </span>
  <% end %>
<% end %>
