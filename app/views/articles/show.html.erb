<h1>Articles#show</h1>

   <%= @article.title %>
   <%= @article.body %>
   <div>
     Tags:  <%= raw @article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
   </div>
   <%= link_to "編集", edit_article_path(@article) %>
   <%= link_to "削除", @article, :method => :delete %>
   <%= link_to "一覧へ", articles_path() %>

   <% @comments.each do |comment| %>
      <%= comment.body %>
      <%= link_to "編集", edit_article_comment_path(@article, comment) %>
      <%= link_to "削除", article_comment_path(@article, comment), :method => :delete %>
      <br>
   <% end %>

   <%= link_to "新規コメント", new_article_comment_path(@article) %>

<p>Find me in app/views/articles/show.html.erb</p>
