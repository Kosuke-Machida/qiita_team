<%= javascript_include_tag 'articles/preview' %>
<%= form_for @article do |f| %>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.text_area :body, rows: 30 %>
  </div>
  <div>
     <%= f.label :tag_list, "Tags (separated by commas)" %><br>
     <%= f.text_field :tag_list, input_html:{data:{role:'tagsinput'}}  %>
  </div>
  <%= f.hidden_field :group_id, value: @group.id %>
  <% if @group.id == MASTER_GROUP_ID %>
    <%= f.submit "Post to everyone" %>
  <% else %>
    <%= f.submit "Post in #{@group.name}" %>
  <% end %>
<% end %>

<p>Pereview</p>
<div id='preview--container'>
  <!-- ここにjsでpreview表示する -->
</div>
