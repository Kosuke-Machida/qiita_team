<div class='title-container'>
  <p class='tab-title'>New Arrivings</p>
</div>

<div class='form-container'>
  <%= form_tag(search_articles_path, method: :get, class: 'searching-form', remote: true) do %>
    <%= text_field_tag :keyword, '', placeholder: 'search article' %>
    <%= submit_tag "search", name: nil %>
  <% end %>
</div>

<div class='searched-results'>
  <%= render partial: 'result', locals: { articles: @articles, keyword: nil } %>
</div>
