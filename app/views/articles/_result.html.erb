<% if keyword.nil? %>
  <h3>Timeline</h3>
<% elsif keyword.empty? %>
  <h3>キーワードを入力してください</h3>
<% else %>
  <h3>"<%= keyword %>"で検索した結果</h3>
<% end %>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>投稿先(グループ名)</th>
    </tr>
  </thead>

  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.user.username %></td>
        <td>
          <% unless article.group_id == MASTER_GROUP_ID %>
            <%= link_to article.group.name, article.group %>
          <% else %>
            全員に公開
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
